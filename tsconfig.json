{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "jsx": "react-native",
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@type/*": ["./src/types/*"],
      "@stores/*": ["src/stores/*"],
      "@styles/*": ["./src/styles/*"],
      "@components/*": ["src/components/*"],
      "@screens/*": ["./src/screens/*"],
    }
  },
  "include": [
    "src",
    "App.tsx",
    "custom_types"
  ],
  "extends": "expo/tsconfig.base"
}
